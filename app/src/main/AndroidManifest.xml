<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github2136.encrypt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MDActivity">
        </activity>
        <activity
            android:name=".EncryptActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".encrypt.DESActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".encrypt.DESedeActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".encrypt.AESActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".encrypt.RSAActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
    </application>

</manifest>